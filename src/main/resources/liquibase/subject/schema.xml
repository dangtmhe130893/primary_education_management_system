<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="create_table_subject" author="dangtm">
        <createTable tableName="subject">
            <column name="id" type="int(11)" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>

            <column name="is_deleted" type="boolean" defaultValueBoolean="false"/>
            <column name="updated_time" type="DATETIME"/>
            <column name="created_time" type="DATETIME"/>
        </createTable>
        <modifySql dbms="mysql">
            <append
                    value="ENGINE=INNODB CHARSET=utf8mb4 COLLATE utf8mb4_unicode_520_ci"/>
        </modifySql>
    </changeSet>

    <changeSet id="create_table_subject_teacher" author="dangtm">
        <createTable tableName="subject_teacher">
            <column name="id" type="int(11)" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="subject_id" type="int(11)">
                <constraints nullable="false"/>
            </column>
            <column name="teacher_id" type="int(11)">
                <constraints nullable="false"/>
            </column>


        </createTable>
        <modifySql dbms="mysql">
            <append
                    value="ENGINE=INNODB CHARSET=utf8mb4 COLLATE utf8mb4_unicode_520_ci"/>
        </modifySql>
    </changeSet>

</databaseChangeLog>